<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane blendMode="EXCLUSION" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ClientViewController">
   <center>
      <TextArea fx:id="chatTextArea" editable="false" focusTraversable="false" wrapText="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="5.0" top="10.0" />
         </BorderPane.margin>
      </TextArea>
   </center>
   <bottom>
      <HBox prefHeight="52.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="messageTextArea" focusTraversable="false" onKeyPressed="#keyPressedAction" onKeyTyped="#keyTypedAction" promptText="Enter text of a message" wrapText="true">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </TextArea>
            <Button fx:id="sendMessageButton" focusTraversable="false" mnemonicParsing="false" onAction="#sendMessageButtonAction" text="SEND">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
   <right>
      <VBox prefWidth="130.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="ipTextField" focusTraversable="false" promptText="Enter server IP">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="portTextField" focusTraversable="false" promptText="Enter port number">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="usernameTextField" focusTraversable="false" promptText="Enter user name">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <HBox>
               <children>
                  <Button fx:id="loginButton" focusTraversable="false" mnemonicParsing="false" onAction="#loginButtonAction" text="LOGIN">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="logoutButton" focusTraversable="false" mnemonicParsing="false" onAction="#logoutButtonAction" text="LOGOUT">
                     <HBox.margin>
                        <Insets bottom="5.0" left="1.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <ListView fx:id="usernameListView" focusTraversable="false">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
               </VBox.margin>
            </ListView>
         </children>
      </VBox>
   </right>
</BorderPane>
